<div id="<%= dom_id(public_todo_list) %>" class="todo_list">
  <div class="name">
    <%= public_todo_list.name %> <%= toggle_watching public_todo_list %>
  </div>

  <% unless public_todo_list.tasks.empty? %>
    <ul class="tasks">
      <% public_todo_list.tasks.each do |task| %>
        <li><%= task.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<hr/>