<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <% flash.collect do |key, message| %>
    <%= content_tag :div, message, :id => "flash_message", :class => key %>
  <% end.join.html_safe %>

  <%= yield %>

</body>

</html>
